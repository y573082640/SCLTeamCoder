FUNCTION YEAR_OF_DATE : INT
VAR_INPUT
    IDATE: DATE;
END_VAR
YEAR_OF_DATE := DWORD_TO_INT((DATE_TO_DWORD(idate) + 43200) / 31557600 + 1970);


