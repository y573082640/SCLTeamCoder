FUNCTION BYTE_TO_STRB : string
VAR_INPUT
    IN : BYTE;
END_VAR

VAR
    i : INT;
    pt : POINTER TO BYTE;
END_VAR
(* pointer f√ºr die ausgabe ermitteln *)
pt := ADR(BYTE_TO_STRB);
(* die 8 ausgabecharacter ermitteln und schreiben *)
FOR i := 1 TO 8 DO
	pt^ := BOOL_TO_BYTE(in.7) + 48;
	in := SHL(in,1);
	pt := pt + 1;
END_FOR;

(* der ausgabestring muss noch mit 0 abgeschlossen werden *)
pt^ := 0;

