FUNCTION_BLOCK TC_S
VAR_OUTPUT
    TC : REAL;             // Output variable declaration
END_VAR

VAR
    init : BOOL;          // Local variable declaration
    tx : DWORD;           // Local variable declaration
    last : DWORD;         // Local variable declaration
END_VAR
(* read system timer *)
tx := T_PLC_US();

IF NOT init THEN
	init := TRUE;
	TC := 0.0;
ELSE
	tc := DWORD_TO_REAL(tx - last)*1.0E-6;
END_IF;
last := tx;

