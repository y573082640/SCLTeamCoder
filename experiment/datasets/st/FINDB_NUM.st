FUNCTION FINDB_NUM : INT
VAR_INPUT
    str : STRING[STRING_LENGTH];
END_VAR

VAR
    pos : INT;
    pt : POINTER TO BYTE;
END_VAR
pt := ADR(str) + LEN(str) - 1;
FOR pos := LEN(str) TO 1 BY -1 DO;
	IF (PT^ > 47 AND PT^ < 58) OR PT^ = 46 THEN
		FINDB_NUM := pos;
		RETURN;
	END_IF;
	PT := PT - 1;
END_FOR;
FINDB_NUM := 0;

