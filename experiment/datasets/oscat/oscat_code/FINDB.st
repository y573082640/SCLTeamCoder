FUNCTION FINDB : INT
VAR_INPUT
    str1 : STRING(STRING_LENGTH);
    str2 : STRING(STRING_LENGTH);
END_VAR

VAR
    pos : INT;
    length : INT;
END_VAR
length := LEN(str2);
FOR pos := LEN(str1) - length + 1 TO 1 BY -1 DO
	IF MID(str1,length,pos) = str2 THEN
		FindB := pos;
		RETURN;
	END_IF;
END_FOR;
FindB := 0;

